{
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [{ "type": "command", "command": "${CLAUDE_PLUGIN_ROOT}/scripts/play-sound.sh permission" }]
      }
    ],
    "Notification": [
      {
        "matcher": "elicitation_dialog",
        "hooks": [{ "type": "command", "command": "${CLAUDE_PLUGIN_ROOT}/scripts/play-sound.sh mcp" }]
      }
    ],
    "Stop": [
      {
        "hooks": [{ "type": "command", "command": "${CLAUDE_PLUGIN_ROOT}/scripts/play-sound.sh complete" }]
      }
    ]
  }
}
